{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "cmake",
            "args": [
                "--build",
                "./build",
                "--config",
                "Debug" ,
                "--target",
                "all" ,
                "--",
                "-j",
                "10"

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}